@model SalesCodeSpace.Models.CityViewModel

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar nova Cidade</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StateId"/>
            <partial name="_City"/>
            <div class="form-group mt-2">
                <input type="submit" value="Novo" class="btn btn-outline-primary" />
                <a asp-action="DetailsState" asp-route-id="@Model.StateId" class="btn btn-outline-success">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}