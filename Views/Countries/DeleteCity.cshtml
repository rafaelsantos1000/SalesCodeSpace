@model SalesCodeSpace.Data.Entities.City

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar</h1>

<h3>Tem a certeza que quer apagar esta cidade ?</h3>
<div>
    <partial name="_CityDetails"/>
    <form asp-action="DeleteCity">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-outline-danger" />
        <a asp-action="DetailsState" asp-route-id="@Model?.State.Id" class="btn btn-outline-success">Voltar</a>
    </form>
</div>