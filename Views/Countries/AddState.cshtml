@model SalesCodeSpace.Models.StateViewModel

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar nova Localidade/Estado</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CountryId"/>
            <partial name="_State"/>
            <div class="form-group mt-2">
                <input type="submit" value="Novo" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model.CountryId" class="btn btn-outline-success">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
